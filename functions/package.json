{
	"name": "functions",
	"scripts": {
		"build": "rm -rf lib && webpack -p --env.production",
		"serve": "rm -rf lib && webpack -d --env.development --devtool source-map && firebase serve --only functions",
		"shell": "npm run build && firebase functions:shell",
		"start": "npm run shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log"
	},
	"engines": {
		"node": "12"
	},
	"main": "lib/index.js",
	"dependencies": {
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"firebase-admin": "^8.6.0",
		"firebase-functions": "^3.3.0"
	},
	"devDependencies": {
		"firebase-functions-test": "^0.1.6",
		"ts-loader": "^6.2.1",
		"typescript": "^3.2.2",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-node-externals": "^1.7.2"
	},
	"private": true
}
