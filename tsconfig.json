{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "build",
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["esnext", "dom"],
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": false,
		"noImplicitAny": false,
		"sourceMap": true,
		"downlevelIteration": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"experimentalDecorators": true
	},
	"include": ["src", "functions/server"],
	"exclude": [
		".vscode",
		"node_modules",
		"build",
		"functions/server/lib",
		"functions/server/node_modules"
	]
}
